{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "ES5",
      "ES2015",
      "ES2015.Iterable",
      "ES2017",
      "ES2019",
      "DOM",
      "DOM.Iterable"
    ],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@zeus-js/shared": ["../shared/src"],
      "@zeus-js/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__", "src/worker"],
  "references": [{ "path": "../faker-shared" }]
}
