{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "ES5",
      "ES2015",
      "ES2015.Iterable",
      "ES2017",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "noEmit": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@zeus-js/shared": ["../shared/src"],
      "@zeus-js/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
