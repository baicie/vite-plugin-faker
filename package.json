{
  "name": "root",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "# Scrips for group #": "_",
    "dev": "turbo run dev --filter=!./playground/*",
    "build": "turbo run build",
    "clean": "rimraf --glob packages/*/dist temp .eslintcache",
    "# Scrips for check #": "_",
    "typecheck": "pnpm -r --parallel typecheck",
    "lint": "eslint --cache .",
    "lint-fix": "eslint --fix .",
    "format": "prettier --write --cache .",
    "format-check": "prettier --check --cache .",
    "# Scrips for test #": "_",
    "test": "vitest",
    "test-unit": "vitest --project unit",
    "test:all": "pnpm -r test",
    "# Scrips for dev #": "_",
    "dev-shared": "pnpm --filter ./packages/shared dev",
    "dev-faker-interceptor": "pnpm --filter ./packages/faker-interceptor dev",
    "dev-faker-ui": "pnpm --filter ./packages/faker-ui dev",
    "dev-vite-plugin-faker": "pnpm --filter ./packages/vite-plugin-faker dev",
    "dev-vue-app": "pnpm --filter ./playground/vue-app dev",
    "dev-backend": "pnpm --filter ./playground/api-server dev",
    "# Scrips for build #": "_",
    "build-shared": "pnpm --filter ./packages/shared build",
    "build-faker-interceptor": "pnpm --filter ./packages/faker-interceptor build",
    "build-faker-ui": "pnpm --filter ./packages/faker-ui build",
    "build-vite-plugin-faker": "pnpm --filter ./packages/vite-plugin-faker build"
  },
  "devDependencies": {
    "@baicie/release": "^0.1.11",
    "@baicie/scripts": "^0.1.2",
    "@eslint/js": "^9.39.2",
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.3",
    "@vitest/eslint-plugin": "^1.6.4",
    "chokidar": "^5.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-regexp": "^2.10.0",
    "fs-extra": "^11.3.3",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "picocolors": "^1.1.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
