{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "tsc --incremental --noEmit",
    "lint": "eslint --cache .",
    "format": "prettier --write --cache .",
    "format-check": "prettier --check --cache .",
    "test": "vitest",
    "test-unit": "vitest --project unit",
    "test:all": "pnpm -r test",
    "build": "pnpm --filter ./packages/* build",
    "build:all": "pnpm -r build",
    "dev": "node scripts/dev.js",
    "install:deps": "pnpm install",
    "ci:check-changes": "node scripts/ci-helper.js check-changes",
    "ci:build-changed": "node scripts/ci-helper.js build-changed",
    "ci:test-changed": "node scripts/ci-helper.js test-changed",
    "ci:check-publish": "node scripts/ci-helper.js check-publish",
    "clean": "pnpm -r clean && rm -rf dist node_modules/.cache",
    "version:patch": "pnpm changeset version && pnpm install --frozen-lockfile",
    "release": "pnpm build && pnpm changeset publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.1.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-regexp": "^2.9.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
